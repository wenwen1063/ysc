<title>广告管理</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 系统 <span class="c-gray en">&gt;</span> 广告管理 <span class="c-gray en">&gt;</span> 广告信息
 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
<form action="{:U('/home/tlunbo/index/search/')}" method="post/get" name="main_form" class="form form-horizontal" id="form-admin-add" style="float:right;">
            <!-- <input type="text" name="advname" value="{$search['adv_name']}" class="input-text" style="width:250px" placeholder="请输入广告名称">
            <input type="text" name="advno" value="{$search['id']}" class="input-text" style="width:250px" placeholder="请输入广告编号">
            <button type="submit" class="btn btn-success" id=""><i class="Hui-iconfont">&#xe665;</i> 搜索</button> -->
            </form>
    <div class="text-c"><br></div>
    <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l">
        <a href="{:U('/home/tlunbo/add')}" class="btn btn-primary radius"><i class="Hui-iconfont"></i> 新增 </a></span>&nbsp;

        <span class="r">共有数据：<strong>{$count}</strong> 条</span> </div>
    <table class="table table-border table-bordered table-bg">
        <thead>
            <tr>
                <th scope="col" colspan="13">轮播图列表</th>
            </tr>
            <tr class="text-c">
                <th width="100">操作</th>
                <th width="100">广告编号</th>
                <th width="100">广告链接</th>
                <!-- <th width="100">广告名称</th> -->
                <!-- <th width="100">广告商品</th> -->
                <!-- <th width="100">广告顺序</th> -->
                <!-- <th width="200">广告详情</th> -->
                <th width="150">广告轮播图</th>
            </tr>
        </thead>
        <tbody>
            <foreach name='data' item='v'>
                <tr class="text-c">
                    <td class="td-manage">
                    <a class="btn btn-primary size-MINI radius" href="{:U('/home/tlunbo/update',array('id'=>$v['id']))}">编辑</a>
                    <a class="btn btn-primary size-MINI radius" href="{:U('/home/tlunbo/del',array('id'=>$v['id']))}" onclick="return confirm('确认要删除吗？');">删除</a>
                    </td>
                    <td>{$v['id']}</td>
                    <td>{$v['link']}</td>
                    <!-- <td>{$v['goods_name']}</td> -->
                    <!-- <td>{$v['sort_no']}</td> -->
                    <!-- <td>{$v['content']}</td> -->
                    <td><img height="40" src="__PUBLIC__/Uploads/{$v['pic']}"></td>
                </tr>
            </foreach>
        </tbody>
    </table>
    <div class="pageright">{$page}</div>
</div>
<script type="text/javascript" src="__PUBLIC__/admin/lib/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="__PUBLIC__/admin/lib/layer/1.9.3/layer.js"></script>
<script type="text/javascript" src="__PUBLIC__/admin/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript" src="__PUBLIC__/admin/lib/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="__PUBLIC__/admin/js/H-ui.js"></script>
<script type="text/javascript" src="__PUBLIC__/admin/js/H-ui.admin.js"></script>
<script type="text/javascript">
/*
    参数解释：
    title   标题
    url     请求的url
    id      需要操作的数据id
    w       弹出层宽度（缺省调默认值）
    h       弹出层高度（缺省调默认值）
*/
/*用户-查看*/
function member_show(title,url,id,w,h){
    layer_show(title,url,w,h);
}
/*管理员-编辑*/
function admin_edit(title,url,id,w,h){
    layer_show(title,url,w,h);
}
//批量删除判断是否选择
function Check()
{
var chks=document.getElementsByTagName('input');
var bl=true;
for(var i=0;i<chks.length;i++)
{
    if(chks[i].checked)
    {
        bl=false;
        break;
    }
}
if(bl){
    alert('最少选择一个');
    return false;
}
}
</script>
</body>
</html>