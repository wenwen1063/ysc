              <span class="select-box">
                <select class="select" size="1" name="gct_id" id="gct_id">
                 <option value="{$data['gct_id']}">{$gct_name}</option>
                    <foreach name='gct' item='v'>
                      <option value="{$v['id']}">{$v['name']}</option>
