<script type="text/javascript">
function check(){
    //form1是form中的name属性
    var _form = document.main_form;
     if(trim(_form.username.value)==""){
        alert("企业名称不为空!");
        return false;
    }
    if(trim(_form.userphone.value)==""){
        alert("账号不为空!");
        return false;
    }
    if(trim(_form.password.value)==""){
        alert("密码不为空!");
        return false;
    }
     if(trim(_form.password.value).length<6){
        alert("密码不为少于6位!");
        return false;
    }
    return true;
}
$(function(){
