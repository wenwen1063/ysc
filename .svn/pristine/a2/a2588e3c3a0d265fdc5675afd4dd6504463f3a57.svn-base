.yes img {
    margin-top: 50%;
    width: 50px;
    height:50px;
    margin-bottom: 20px;
}

.yes {
    width: 100%;
    text-align: center;
}

.yes .input input{
    position: relative;
    width: 100px;
    height:30px;
    background-color: #FFFFFF;
    color: #fe504f;
    border-radius: 20px;
    margin: 10px;
    border: 1px solid #fe504f;
}

.yes .input .red{
    background-color: #fe504f;
    color: #FFFFFF;

}