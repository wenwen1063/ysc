    <script>
    (function($, doc) {
        $.init();
        $.ready(function() {
            //普通示例
            var userPicker = new $.PopPicker();
            var showUserPickerButton = doc.getElementById('showUserPicker');
            //-----------------------------------------
            //                  //级联示例
            var cityPicker3 = new $.PopPicker({
                layer: 3
            });
            cityPicker3.setData(cityData3);
            var showCityPickerButton = doc.getElementById('showCityPicker');
            var cityResult3 = doc.getElementById('cityResult');
            showCityPickerButton.addEventListener('tap', function(event) {
                cityPicker3.show(function(items) {
                    cityResult3.innerText = (items[0] || {}).text + " " + (items[1] || {}).text + " " + (items[2] || {}).text;
                    //返回 false 可以阻止选择框的关闭
                    //return false;
                });
            }, false);
        });
    })(mui, document);
    </script>
    <script>
    // mui('.xin')[0].style.display = 'block'
    mui(".input").on('tap', '.dizhi', function() {
        this.style.display = "none"
    var xin = mui('.xin')[0];
    xin.style.display = 'block'
        })
    function check() {
        var rename = $("#rename").val();
        var phone = $("#phone").val();
        var address = $("#address").val();
        var quyu = $("#cityResult").val();
        var is_moren = $("#moren").val();
        if (rename == '' || phone == '' || quyu == '' || address == '') {
            mui.toast('请检查收货信息是否填写完整！');
            return false;
        };
        if (phone.length != 11) {
            mui.toast('请输入正确手机号码！');
        };
        $.ajax({
            type: "post",
            url: "{:U('/home/address/updateaddr')}",
            async: false,
            data: {
                "rename": rename,
                "phone": phone,
                "quyu": quyu,
                "address": address,
                "is_moren": is_moren
            },
            dataType: "json",
            success: function(data) {
                //              console.log(data);
                if (data.result == 0) {
                    mui.toast('编辑成功！');
                    window.location.href = "{:U('home/address/addrmanage')}";
                } else {
                    mui.toast('编辑失败！');
                }
            },
        });
    }
    </script>
