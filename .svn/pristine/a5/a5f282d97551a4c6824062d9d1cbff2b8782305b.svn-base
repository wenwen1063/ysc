	$('.leftPanel ul li').click(function() {
		$('.leftPanel ul li').removeClass('active');
		$(this).addClass('active');
		var index = $(this).index();
		$('.contentPanel .tabitem').hide();
		$('.contentPanel .tabitem' + index).show();
	})
</script>