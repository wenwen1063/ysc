    <script type="text/javascript">
    function check() {
        if ($('#username').val() == "") {
            alert("导师账号不能为空!");
            return false;
        }
        if ($('#password').val() == "") {
            alert("导师密码不能为空!");
            return false;
        }
        if ($('#teacher_name').val() == "") {
            alert("导师姓名不能为空!");
            return false;
        }
        if ($('#synopsis').val() == "") {
            alert("导师简介不能为空!");
            return false;
        }
        // if($('#synopsis_detailed').val()==""){
        //     alert("导师详情不能为空!");
        //     return false;
        // }
        if ($('#teacher_head').val() == "") {
            alert("请选择头像图片!");
            return false;
        }
        if ($('#teacher_img').val() == "") {
            alert("请选择广告图片!");
            return false;
        }
        return true;
    }
