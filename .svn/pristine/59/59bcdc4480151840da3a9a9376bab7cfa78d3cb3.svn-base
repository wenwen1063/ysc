<script type="text/javascript">
	$('.guanzhu').click(function() {
		$seller_id = "<?php echo $seller['id'] ?>";
		$isnot = $(this).val();
		if($isnot == "已关注") {
			mui.toast('已关注！');
		} else {
			$.ajax({
				url: "{:U('/home/seller/guanzhu')}",
				type: "post",
				data: {
					"id": $seller_id
				},
				dataType: "json",
				success: function(data) {
					//                 console.log(data);
					if(data.result == 1) {
						$('#header_img input').val('已关注');
						mui.toast('关注成功！');
					}

				}
			});
		};
	})
</script>