.mui-bar-nav ~ .mui-content {
    padding-top: 0px;
}

#segmentedControl {
    padding-top: 5px;
    height: 40px;
    background-color: #fff;

}

.mui-segmented-control .mui-control-item.mui-active {
    color: #fe504f;
    background-color: #fff;
}

.mui-segmented-control .mui-control-item {
    border: none;
}

.mui-segmented-control {
    border: none;
}

.content {
    position: relative;
    top: 10px;
}

.mui-control-content .img {
    position: relative;
    top: 100%;
    width: 100%;
    height: 50px;
    text-align: center;
}

.mui-control-content .img img {
    margin-bottom: 20px;
    width: 50px;
    height: 50px;
}

.mui-card {
    margin: 0;
}

.mui-table-view-cell {
    border-radius: 0;
    padding: 0;
}

.mui-card .mui-table-view .mui-table-view-cell:last-child, .mui-card .mui-table-view .mui-table-view-divider:last-child {
    border-radius: 0;
}

#scroll .mui-media-body {
    font-weight: 100;
    position: relative;
    top: 12px;
}

#scroll .mui-media-body p {
    width: 80%;
}

#scroll .mui-media-body p span {
    color: #000000;
}

#scroll .mui-media-body h5 {
    position: relative;
    bottom: 25px;
    float: right;
    color: #ec971f;
}

#item1 {
    background-color: #FFFFFF;
}
#item1 .title{
    height:55px;
    width: 100%;
    border-bottom: 1px solid #e0e0e0;
}
#item1 .title img {
    float: left;
    position: relative;
    left:10px;
    top:10px;
    width: 30px;
    height: 30px;
}

#item1 .title p{
    position: relative;
    top:15px;
    left:20px;
    width: 70%;
}

#item1 .title p span{
    color: #000000;
}
#item1 .title h5{
    color: #ec971f;
    position: relative;
    bottom: 17px;
    right: 10px;
    float: right;
}
#item1 .commodity .list{
    width: 100%;
    height:80px;
    border-bottom: 1px solid #e0e0e0;
}
#item1 .commodity .list img{
    float: left;
    margin: 10px;
    width: 50px;
}
#item1 .commodity .list h5{
    position: relative;
    top:10px;
}
#item1 .commodity .list p{
    color: #fe504f;
    position: relative;
    top:18px;
    font-size: 16px;
}
#item1 .commodity .list span{
    color: #4a4a4a;
}

#item1 .other{
    position: relative;
    top:10px;
    width: 100%;
    height:40px;
}
#item1 .other input{
    float: right;
    margin-right: 10px;
    height:40px;
    width: 100px;
    border: 1px solid #e0e0e0;
    border-radius: 50px;
}
#item1 .other .red{
    background-color: #fe504f;
    color: #FFFFFF;
}
#item1 .list{

}
#item1 .top{
    height:290px;
    position: relative;
    top:35px;
    border-bottom: 10px solid #e0e0e0;
    background-color: #FFFFFF;
}

.mui-segmented-control .mui-control-item{
	color: #909090;
}
