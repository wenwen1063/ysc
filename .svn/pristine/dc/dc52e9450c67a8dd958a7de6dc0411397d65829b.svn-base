             ->where(array("goods_id"=>$serviceinfo['goods_id'],'goods_attribute_id'=>$serviceinfo['goods_attribute_id']))
			 ->setInc('stock',$serviceinfo['goods_number']);
        }
        $bonus_platform=M("bonus_consume")
        ->where(array("order_id"=>$order['order_id'],'goods_id'=>array("in",$order['goods_id'])))->select();
		
		foreach( $bonus_platform as $key=>$value){
		   $user->where(array('id' => $value['user_id']))->setDec('reward_freeze', floatval($bonus_consume['money'])); // 用户的冻结奖励减少
           $user->where(array('id' => $value['user_id']))->setDec('reward_receive', floatval($bonus_consume['money'])); //可领取奖励加
		}

        $this->success('操作成功！', U('/home/service/serviceindex'));
