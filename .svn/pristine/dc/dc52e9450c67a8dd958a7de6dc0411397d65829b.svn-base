    public function pass()
    {
        $arr = I(); //type 0退货1退款2换货->status132
        if ($arr['type'] == 1) {
            $data         = M('customer_service');
            $data->id     = $arr['id'];
            $data->status = 2;
            $data->save();
        } elseif ($arr['type'] == 2) {
            $data         = M('customer_service');
            $data->id     = $arr['id'];
            $data->status = 1;
            $data->save();
        }
        $this->success('操作成功！', U('/home/service/serviceindex'));
    }
