			//二维数组转字符串
			function getString(objarr) {　　
				var typeNO = objarr.length;　
				var tree = "[";　　
				for(var i = 0; i < typeNO; i++) {
					tree += "{";
					tree += objarr[i].join(",");　　　
					tree += "}";　　　
					if(i < typeNO - 1) {　　　　
						tree += ",";　　　
					}　
				}　
				tree += "]";　
				return tree;
			};
