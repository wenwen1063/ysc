<script type="text/javascript">
    function check(){
        if($('#name').val() == ''){
            mui.toast('商家名称不能为空');
            return false;
        }
        if($('#open_bank').val() == ''){
            mui.toast('开户行不能为空');
            return false;
        }
        if($('#open_name').val() == ''){
            mui.toast('开户名称能为空');
            return false;
        }
        if($('#open_account').val() == ''){
            mui.toast('银行卡号不能为空');
            return false;
        }
        if($('#contact').val() == ''){
            mui.toast('真实姓名不能为空');
            return false;
        }
        if($('#tel').val() == ''){
            mui.toast('联系电话不能为空');
            return false;
        }
        if($('#phone').val() == ''){
            mui.toast('手机号码不能为空');
            return false;
        }
        if($('#qq').val() == ''){
            mui.toast('联系QQ不能为空');
            return false;
        }
        if($('#wechat').val() == ''){
            mui.toast('微信号不能为空');
            return false;
        }
        if($('#file1').val() == ''){
            mui.toast('身份证正面不能为空');
            return false;
        }
        if($('#file2').val() == ''){
            mui.toast('身份证反面不能为空');
            return false;
        }
        // if($('#file5').val() == ''){
        //     return false;
        // }
        return true;
    }
    //实现点击图片同时，触发type=file这个input
    $("#img-change1").click(function () {
        $("#file1").click();
    });
    $("#img-change2").click(function () {
        $("#file2").click();
    });
    $("#img-change5").click(function () {
        $("#file5").click();
    });

    function change1() {
        var pic = document.getElementById("img-change1"),
            file = document.getElementById("file1");

        var ext=file.value.substring(file.value.lastIndexOf(".")+1).toLowerCase();

         // gif在IE浏览器暂时无法显示
         if(ext!='png'&&ext!='jpg'&&ext!='jpeg'){
             mui.toast("图片的格式必须为png或者jpg或者jpeg格式！");
             return;
         }
         var isIE = navigator.userAgent.match(/MSIE/)!= null,
             isIE6 = navigator.userAgent.match(/MSIE 6.0/)!= null;

         if(isIE) {
            file.select();
            var reallocalpath = document.selection.createRange().text;

            // IE6浏览器设置img的src为本地路径可以直接显示图片
             if (isIE6) {
                pic.src = reallocalpath;
             }else {
                // 非IE6版本的IE由于安全问题直接设置img的src无法显示本地图片，但是可以通过滤镜来实现
                 pic.style.filter = "progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='image',src=\"" + reallocalpath + "\")";
                 // 设置img的src为base64编码的透明图片 取消显示浏览器默认图片
                 pic.src = 'data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==';
             }
         }else {
            html5Reader1(file);
         }
    }
    function html5Reader1(file){
        var file = file.files[0];
        var reader = new FileReader();
        reader.readAsDataURL(file);
        reader.onload = function(e){
            var pic = document.getElementById("img-change1");
            pic.src=this.result;
        }
    }

