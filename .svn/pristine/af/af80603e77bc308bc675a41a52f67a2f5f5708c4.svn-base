    <script>
    function text() {
        for (var i = 0; i < mui('.list').length; i++) {
            mui('.list')[i].style.display = 'block';
        }
        mui('.none')[0].style.display = 'none';
        setTimeout(function() {
            for (var i = 0; i < mui('.list').length; i++) {
                mui('.list')[i].style.display = 'none';
            }
            mui('.none')[0].style.display = 'block';
            setTimeout(function() {
                text()
            }, 1000)
        }, 1000)

    }
    text();
    </script>
