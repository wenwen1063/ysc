<script>
    function check(){
//        $("#address").val($('#cityResult').html())
        if($('#name').val() == null || $('#name').val() == ''){
            alert('收货人姓名不能为空');
            return false;
        }
        if($('#tel').val() == null || $('#tel').val() == ''){
            alert('收货人电话不能为空');
            return false;
        }
        var cityinfo = $("#cityResult").text();
        if (cityinfo==""){
            alert("区域不能为空");
            return false;
        }else{
            $("#cityinfo").val(cityinfo);
        }
        if($('#addr').val() == null || $('#addr').val() == ''){
            alert('详细地址不能为空');
            return false;
        }
    }
