					<h5>请选择规格</h5>
					<div class="floatattr">
						<ul>
							<foreach name="attr" item="v">
								<if condition="$key eq 0">
									<li class="active" id="{$v['ga_id']}"><span class="spanclass">{$v['ga_name']}</span></li>
									<else />
									<li class="" id="{$v['ga_id']}"><span class="spanclass">{$v['ga_name']}</span></li>
