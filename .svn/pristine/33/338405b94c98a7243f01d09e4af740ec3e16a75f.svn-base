    <div class="pd-20">
        <div class="pd-20">
            <form action="{:U('/home/Notice/noticeupdate')}" method="post" name="main_form" class="form form-horizontal" id="form-admin-add">
                <div class="row cl">
                    <label class="form-label col-3"><span class="c-red">*</span>标题：</label>
                    <div class="formControls col-5">
                        <input type="text" class="input-text" value="{$data['title']}" placeholder="请输入标题" id="title" name="title" datatype="*2-16">
                    </div>
                    <div class="col-4"> </div>
                </div>
                <input type="hidden" name="id" id="id" value="{$data['id']}" />
                <input type="hidden" name="retitle" value="{$data['title']}">
                <div class="row cl">
                    <label class="form-label col-3"><span class="c-red">*</span>内容：</label>
                    <div class="formControls col-5">
                        <textarea type='text' class="content" value='' id="data" name="content" style="height: 200px;width: 680px;resize: none;">{$data['content']}</textarea>
                    </div>
                </div>
                <div class="row cl">
                    <div class="col-9 col-offset-3">
                        <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;保存&nbsp;&nbsp;" onclick="return check()">
                        <input class="btn btn-primary radius" type="reset" value="&nbsp;&nbsp;重置&nbsp;&nbsp;">
                    </div>
                </div>
            </form>
        </div>
