        <script type="text/javascript">
        var a_id = $('#aid').val();

        $(".nice").click(function() {
            // alert(a_id);
            $.ajax({
                url: "{:U('/home/teacher/nice')}",
                type: "post",
                data: {
                    "id": a_id
                },
                dataType: "json",
                success: function(data) {
                    console.log(data);
                    if (data['result'] == 0) {
                        // alert('点赞成功！');
                        mui.toast('点赞成功！');
                        window.location.reload();
                    }
                    if (data['result'] == 1) {
                        // alert('点赞失败！');
                        mui.toast('点赞失败！');
                    }
                }
            })
        });

        function check() {
            if ($('#content').val() == "") {
                mui.toast('评论不能为空！');
                // alert("评论不能为空!");
                return false;
            }
            pl();
        }

        function pl() {
            var content = $('#content').val();
            // alert(content);
            $.ajax({
                url: "{:U('/home/teacher/pinl')}",
                type: "post",
                data: {
                    "id": a_id,
                    "content": content
                },
                dataType: "json",
                success: function(data) {
                    // console.log(data);
                    if (data.result == 0) {
                        // alert('评论成功！');
                        mui.toast('评论成功！');
                        window.location.reload();
                    } else {
                        mui.toast('评论失败！');
                        // alert('评论失败！');
                    }
                }
            });
        }
        </script>
