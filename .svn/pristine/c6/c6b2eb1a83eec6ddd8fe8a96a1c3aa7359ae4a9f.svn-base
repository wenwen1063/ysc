			function getinfo($id) {
				$.ajax({
					type: "post",
					url: "{:U('home/privilege/getinfo')}",
					data: {
						id: $id
					},
					async: true,
					success: function(data) {
						console.log(data);
						$("#goodss").empty();
						$("#goodss").append("<select class='select' size='1' id='privilege_products' name='privilege_products'></select>");
						for(var i = 0; i < data.length; i++) {
							console.log(data[i]['id']);
							$("#privilege_products").append("<option value='" + data[i]['id'] + "'>" + data[i]['name'] + "</option>");
						}
						$('#privilege_products').searchableSelect();
					}
				});
			}
